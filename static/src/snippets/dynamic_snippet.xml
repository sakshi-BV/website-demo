<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="basic_snippet_dynamic" name="Dynamic Snippet">
        <section class="container dynamic_snippet_blog">
            <div class="row">
                <div class="col-md-12">
                    <h1>Dynamic Snippet</h1>
                    Total Products Sold: <span id="total_sold"/>
                </div>
            </div>
        </section>
     </template>

     
     <template id="external_snippets_dynamic" inherit_id="website.snippets" priority="8">
        <xpath expr="//div[@id='snippet_effect']//t[@t-snippet][last()]" position="after">
               <t t-snippet="website_demo.basic_snippet_dynamic"/>
           </xpath>
        </template>
    

</odoo>
